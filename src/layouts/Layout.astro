---
import Head from '../components/Head.astro'
import Nav from './Nav.astro'
import '../styles/globals.css'

export interface Props {
	seo: {
		title: string
		description: string
		image: string
		url: string
	}
}

const { seo } = Astro.props
---

<!doctype html>
<html lang="en">
	<Head {...seo} />
	<body>
		<header>
			<Nav theme="dark" />
		</header>

		<slot />
	</body>
</html>
