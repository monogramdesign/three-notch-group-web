---
import type { HomeHeroFragmentFragment } from '../../generated/graphql'

type Props = Pick<HomeHeroFragmentFragment, 'title' | 'description' | 'backgroundImage'>

const { title, description, backgroundImage } = Astro.props
---

<section
	class="relative min-h-[80vh] flex items-center justify-center"
	style={`background-image: url(${backgroundImage?.responsiveImage?.src}); background-size: cover; background-position: center;`}
>
	<div class="absolute inset-0 bg-black/50"></div>
	<div class="relative z-10 container mx-auto px-4 text-center text-white">
		<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
			{title}
		</h1>
		<p class="text-lg md:text-xl max-w-2xl mx-auto">
			{description}
		</p>
	</div>
</section>
