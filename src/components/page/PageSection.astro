---
import type {
	HomeHeroFragment,
	InnerHeroFragment,
	ArticleHeroFragment,
	FormFragment,
	CardStackFragment,
	MediaBlockFragment
} from '../../generated/graphql'
import InnerHero from '../hero/InnerHero.astro'
import HomeHero from '../hero/HomeHero.astro'
import ArticleHero from '../hero/ArticleHero.astro'
import Form from '../form/Form.astro'
import CardStack from '../cardStack/CardStack.astro'
import MediaBlock from '../mediaBlock/MediaBlock.astro'
type Props = {
	section:
		| HomeHeroFragment
		| InnerHeroFragment
		| ArticleHeroFragment
		| FormFragment
		| CardStackFragment
		| MediaBlockFragment
}

const { section } = Astro.props
---

{section.__typename === 'HomeHeroRecord' && <HomeHero {...section} />}
{section.__typename === 'InnerHeroRecord' && <InnerHero {...section} />}
{section.__typename === 'ArticleHeroRecord' && <ArticleHero {...section} />}
{section.__typename === 'FormRecord' && <Form {...(section as FormFragment)} />}
{section.__typename === 'CardStackRecord' && <CardStack {...(section as CardStackFragment)} />}
{section.__typename === 'MediaBlockRecord' && <MediaBlock {...(section as MediaBlockFragment)} />}
